# AgeKey Configuration
# Copy this file to .env.local and fill in your actual values

# AgeKey Client Credentials (REQUIRED)
# Note: CLIENT_ID is public (used in browser), CLIENT_SECRET is private (server-only)
NEXT_PUBLIC_AGEKEY_CLIENT_ID=your_client_id_here
AGEKEY_CLIENT_SECRET=your_client_secret_here

# AgeKey Issuer URLs (REQUIRED)
# These are the OpenID Connect endpoints for AgeKey
# These are public as they're used in the browser
NEXT_PUBLIC_AGEKEY_USE_ISSUER=https://api.agekey.org/v1/oidc/use
NEXT_PUBLIC_AGEKEY_CREATE_ISSUER=https://api.agekey.org/v1/oidc/create

# Redirect URI (REQUIRED)
# Must be registered in your client configuration
# This is public as it's used in the browser
NEXT_PUBLIC_AGEKEY_REDIRECT_URI=http://localhost:3000/callback

# Server Configuration (OPTIONAL)
# Port for the development server
PORT=3000
